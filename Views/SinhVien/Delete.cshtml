@model KiemTraBuoi7.Models.SinhVien

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<h1>Xóa Sinh Viên</h1>
<h3>Bạn có chắc muốn xóa sinh viên này?</h3>
<div>
    <h4>Thông tin sinh viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Masv)</dt>
        <dd class="col-sm-10">@Model.Masv</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.HoTen)</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MaNganhNavigation.TenNganh)</dt>
        <dd class="col-sm-10">@Model.MaNganhNavigation?.TenNganh</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Masv" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>